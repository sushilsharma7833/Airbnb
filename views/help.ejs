
<%- include('./partials/header.ejs') %>
<%- include('./partials/nav2.ejs') %>


    

<section>

 
    <div class="p-3 bg-secondary">
        <!-- post component -->
        <div style="width:76vw;" class="bg-light m-auto px-3">
            <h2>Ask your doubt on email</h2>
            <div class="wrapperdata mx-5 d-flex my-3">
                <form class="row g-3 col-lg-6 border alert mt-2" method="Post"
                    action="http://localhost:4000/contactquerydata">
                    <div class="col-md-12">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="Name" placeholder="pradeep kumar" required>
                    </div>
                    <div class="row col-12">
                        <div class="col-md-12">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" name="Email" placeholder="Email@gmail.com"
                                required>
                        </div>
                        <div class="col-12">
                            <label for="phone" class="form-label">Mobile no</label>
                            <input type="text" class="form-control" id="phone" name="Phone" placeholder="91+"
                                required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label for="query" class="form-label">Doubts</label>
                        <textarea rows="4" cols="50" id="query" name="doubts" class="form-control">
                            </textarea>
                    </div>

                    <div class="col-md-12">
                        <button class="btn btn-primary col-md-12" type="submit">Submit form</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
